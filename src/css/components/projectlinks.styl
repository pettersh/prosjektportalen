@import "../conf/*";

ul.pp-project-quicklinks {
    display: block;
    list-style: none;
    margin: 0;
    padding: 0;

    li.project-link {
        margin: 0 10px 10px 0;
        display: block;
        width: 130px;
        height: 130px;
        vertical-align: middle;
        text-align: center;
        padding: 10px;
        float: left;
        color: white;
        background-color: $SuiteBarBackground;
        position: relative;
        opacity: 0.8;

        i {
            font-size: 50px;
            margin-top: 20px;
        }
        a, a:visited, a:hover, a:active {
            color: white;
            text-decoration: none;
            font-size: 1em;
            width: 100%;
            margin-bottom: 10px;
            position: absolute;
            bottom: 0;
            left: 0;
        }
        &:hover {
            opacity: 1;
        }
    }
}